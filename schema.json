// RemiMinder Universal Data Model (Draft v1)
// Purpose: Standardize outputs from Audio, Scans, and Manual Entry

export interface VisitMetadata {
  source_type: 'audio_transcript' | 'scanned_document' | 'caregiver_note';
  date: string; // ISO 8601 format (YYYY-MM-DD)
  provider_name?: string; // Optional, inferred from text/scan
}

export interface Medication {
  brand_name: string | null;  // e.g., "Advil"
  generic_name: string | null; // e.g., "Ibuprofen"
  dosage: string;             // e.g., "200mg"
  frequency: string;          // Clinical standard (e.g., "BID", "QID")
  action_needed: boolean;     // Triggers a reminder setup
}

export interface LabResult {
  test_name: string;          // e.g., "LDL Cholesterol"
  value: number;              // e.g., 130
  unit: string;               // e.g., "mg/dL"
  flag: 'Normal' | 'High' | 'Low' | 'Critical'; // For UI highlighting
}

// The Main Object Structure
export interface RemiMinderData {
  visit_metadata: VisitMetadata;
  extracted_entities: {
    medications: Medication[];
    lab_results: LabResult[];
    next_steps: string[];     // Actionable plain text items
  };
}